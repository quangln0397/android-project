<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame1"
    tools:context=".Exercises">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="750px"
                android:layout_height="400px"
                android:background="@drawable/dong_tac_5"
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/im2"
                android:layout_width="750px"
                android:layout_height="400px"
                android:layout_below="@id/im1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/dong_tac_6" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="750px"
                android:layout_height="400px"
                android:layout_below="@id/im2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/dong_tac_4"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/im4"
                android:layout_width="750px"
                android:layout_height="400px"
                android:background="@drawable/dong_tac_2"
                android:layout_below="@id/im3"
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="79dp"
                android:text="Bài tập giảm mỡ cho nữ"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="296dp"
                android:text="Bài tập tăng cơ cho nữ"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="53dp"
                android:layout_marginTop="503dp"
                android:text="Bài tập giảm mỡ cho nam"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="59dp"
                android:layout_marginTop="707dp"
                android:text="Bài tập tăng cơ cho nam"
                android:textSize="50px"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/im1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/custom"
                android:text="Tập" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/im1"
                android:layout_alignBottom="@+id/im2"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/custom"
                android:text="Tập" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="286dp"
                android:layout_marginLeft="286dp"
                android:layout_marginTop="591dp"
                android:background="@drawable/custom"
                android:text="Tập" />

            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/custom"
                android:text="Tập" />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>